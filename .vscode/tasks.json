{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "First Build",
            "type": "shell",
            "windows": {
                "command": "first-build.bat"
            },
            "linux": {
                "command": "./first-build.sh"
            },
            "problemMatcher": []
        },
        {
            "taskName": "Build",
            "type": "shell",
            "command": "conan build --file ../../conanfile.py",
            "windows": {
                "options": {
                    "cwd": "${workspaceFolder}/build/win"
                }
            },
            "linux": {
                "options": {
                    "cwd": "${workspaceFolder}/build/lin"
                }
            },
            "problemMatcher": []
        }
    ]
}