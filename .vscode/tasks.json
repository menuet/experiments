{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "Create Build Dir",
            "type": "shell",
            "windows": {
                "command": "mkdir build\\win"
            },
            "linux": {
                "command": "mkdir -p build/lin"
            },
            "problemMatcher": []
        },
        {
            "taskName": "Build",
            "type": "shell",
            "command": "conan build --file ../../conanfile.py",
            "windows": {
                "options": {
                    "cwd": "${WorkspaceDir}/build/win"
                }
            },
            "linux": {
                "options": {
                    "cwd": "${WorkspaceDir}/build/win"
                }
            },
            "problemMatcher": []
        }
    ]
}