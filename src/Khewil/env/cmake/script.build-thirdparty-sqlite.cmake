set(KHEWIL_SQLITE_INNERBUILD_DIR "${CMAKE_CURRENT_BINARY_DIR}/sqlite-inner-build")
message(STATUS "KHEWIL_SQLITE_INNERBUILD_DIR=${KHEWIL_SQLITE_INNERBUILD_DIR}")

include("${CMAKE_CURRENT_LIST_DIR}/script.helpers.cmake")

function(khewil_sqlite_build)
	file(MAKE_DIRECTORY "${KHEWIL_SQLITE_INNERBUILD_DIR}")
	execute_process(
		COMMAND cl "/LD" "${KHEWIL_THIRDPARTIES_SRC_UNZIP_DIR}/${KHEWIL_SQLITE_SRC_NAMEVERSION}/sqlite3.c" "/IMPLIB:sqlite3.lib" "/DSQLITE_API=__declspec(dllexport)"
		WORKING_DIRECTORY "${KHEWIL_SQLITE_INNERBUILD_DIR}"
		)
	khewil_copy(
		"${KHEWIL_SQLITE_INNERBUILD_DIR}"
		"${KHEWIL_THIRDPARTIES_INSTALL_DIR}/${KHEWIL_SQLITE_INSTALL_NAMEVERSION}/lib"
		"*.lib"
		FALSE
		)
	khewil_copy(
		"${KHEWIL_SQLITE_INNERBUILD_DIR}"
		"${KHEWIL_THIRDPARTIES_INSTALL_DIR}/${KHEWIL_SQLITE_INSTALL_NAMEVERSION}/bin"
		"*.dll"
		FALSE
		)
	khewil_copy(
		"${KHEWIL_THIRDPARTIES_SRC_UNZIP_DIR}/${KHEWIL_SQLITE_SRC_NAMEVERSION}"
		"${KHEWIL_THIRDPARTIES_INSTALL_DIR}/${KHEWIL_SQLITE_INSTALL_NAMEVERSION}/inc/sqlite"
		"*.h"
		FALSE
		)
endfunction()

khewil_download_unzip(
	"https://www.sqlite.org/2015/${KHEWIL_SQLITE_SRC_NAMEVERSION}.zip"
	"${KHEWIL_THIRDPARTIES_SRC_ZIP_DIR}/${KHEWIL_SQLITE_SRC_NAMEVERSION}.zip"
	"${KHEWIL_THIRDPARTIES_SRC_UNZIP_DIR}/${KHEWIL_SQLITE_SRC_NAMEVERSION}"
	)

khewil_sqlite_build()

khewil_zip_upload(
	"${KHEWIL_THIRDPARTIES_INSTALL_DIR}/${KHEWIL_SQLITE_INSTALL_NAMEVERSION}"
	"${KHEWIL_THIRDPARTIES_CACHE_DIR}/${KHEWIL_SQLITE_INSTALL_NAMEVERSION}.zip"
	)
