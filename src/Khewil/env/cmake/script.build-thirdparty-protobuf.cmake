include("${CMAKE_CURRENT_LIST_DIR}/script.helpers.cmake")

function(khewil_protobuf_build)
	message("Building protobuf ${KHEWIL_PROTOBUF_INSTALL_NAMEVERSION}")
	file(MAKE_DIRECTORY "${KHEWIL_PROTOBUF_INNERBUILD_DIR}")
	execute_process(
		COMMAND
			"${CMAKE_COMMAND}"
			-G "${CMAKE_GENERATOR}"
			-D "BUILD_TESTING=OFF"
			-D "BUILD_SHARED_LIBS=ON"
			"${KHEWIL_PROTOBUF_SRC_UNZIP_DIR}/cmake"
		WORKING_DIRECTORY "${KHEWIL_PROTOBUF_INNERBUILD_DIR}"
		)
	execute_process(
		COMMAND "${CMAKE_COMMAND}" --build "${KHEWIL_PROTOBUF_INNERBUILD_DIR}" --config Release
		WORKING_DIRECTORY "${KHEWIL_PROTOBUF_INNERBUILD_DIR}"
		)
	execute_process(
		COMMAND "${KHEWIL_PROTOBUF_INNERBUILD_DIR}/extract_includes.bat"
		WORKING_DIRECTORY "${KHEWIL_PROTOBUF_INNERBUILD_DIR}"
		)
	khewil_copy(
		"${KHEWIL_PROTOBUF_INNERBUILD_DIR}/Release"
		"${KHEWIL_THIRDPARTIES_INSTALL_DIR}/${KHEWIL_PROTOBUF_INSTALL_NAMEVERSION}/lib"
		"*.lib"
		FALSE
		)
	khewil_copy(
		"${KHEWIL_PROTOBUF_INNERBUILD_DIR}/Release"
		"${KHEWIL_THIRDPARTIES_INSTALL_DIR}/${KHEWIL_PROTOBUF_INSTALL_NAMEVERSION}/bin"
		"*.dll"
		FALSE
		)
	khewil_copy(
		"${KHEWIL_PROTOBUF_INNERBUILD_DIR}/Release"
		"${KHEWIL_THIRDPARTIES_INSTALL_DIR}/${KHEWIL_PROTOBUF_INSTALL_NAMEVERSION}/bin"
		"*.exe"
		FALSE
		)
	khewil_copy(
		"${KHEWIL_PROTOBUF_INNERBUILD_DIR}/include"
		"${KHEWIL_THIRDPARTIES_INSTALL_DIR}/${KHEWIL_PROTOBUF_INSTALL_NAMEVERSION}/inc"
		"*.*"
		TRUE
		)
endfunction()

khewil_download_unzip(
	"https://github.com/google/protobuf/archive/v3.0.0-beta-1.zip"
	"${KHEWIL_THIRDPARTIES_SRC_ZIP_DIR}/${KHEWIL_PROTOBUF_SRC_NAMEVERSION}.zip"
	"${KHEWIL_THIRDPARTIES_SRC_UNZIP_DIR}/${KHEWIL_PROTOBUF_SRC_NAMEVERSION}"
	)

khewil_protobuf_build()

khewil_zip_upload(
	"${KHEWIL_THIRDPARTIES_INSTALL_DIR}/${KHEWIL_PROTOBUF_INSTALL_NAMEVERSION}"
	"${KHEWIL_THIRDPARTIES_CACHE_DIR}/${KHEWIL_PROTOBUF_INSTALL_NAMEVERSION}.zip"
	)
