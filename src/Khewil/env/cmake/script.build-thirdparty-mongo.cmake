function(khewil_mongo_build)
	file(MAKE_DIRECTORY "${KHEWIL_MONGO_INNERBUILD_DIR}")
	execute_process(
		COMMAND
			"${KHEWIL_TOOL_SCONS}"
			"--prefix=${KHEWIL_MONGO_INNERBUILD_DIR}/prefix"
			--dynamic-windows=on
			--dynamic-boost=on
			--sharedclient
			--c++11=on
			--dbg=off
			--msvc-version=12.0
			--msvc-host-arch=x86
			"--cpppath=${BOOST_INCLUDES}"
			"--libpath=${BOOST_LIBRARIES}"
			install
		WORKING_DIRECTORY "${KHEWIL_MONGO_SRC_UNZIP_DIR}"
		)
	khewil_copy(
		"${KHEWIL_MONGO_INNERBUILD_DIR}/prefix/lib"
		"${KHEWIL_THIRDPARTIES_INSTALL_DIR}/${KHEWIL_MONGO_INSTALL_NAMEVERSION}/lib"
		"*.lib"
		FALSE
		)
	khewil_copy(
		"${KHEWIL_MONGO_INNERBUILD_DIR}/prefix/lib"
		"${KHEWIL_THIRDPARTIES_INSTALL_DIR}/${KHEWIL_MONGO_INSTALL_NAMEVERSION}/bin"
		"*.dll"
		FALSE
		)
	khewil_copy(
		"${KHEWIL_MONGO_INNERBUILD_DIR}/prefix/include"
		"${KHEWIL_THIRDPARTIES_INSTALL_DIR}/${KHEWIL_MONGO_INSTALL_NAMEVERSION}/inc"
		"*.*"
		TRUE
		)
endfunction()

