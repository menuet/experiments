
set(SQLITE_NAMEVERSION "sqlite-3.9.1")
set(SQLITE_ROOT "${KHEWIL_THIRDPARTIES_INSTALL_DIR}/${SQLITE_NAMEVERSION}")

if (EXISTS "${SQLITE_ROOT}")
	set(SQLITE_FOUND ON)
	set(SQLITE_INCLUDES "${SQLITE_ROOT}/inc" "${SQLITE_ROOT}/inc/sqlite")
	set(SQLITE_LIBRARIES "${SQLITE_ROOT}/lib/$<CONFIG>")
	set(SQLITE_BINARIES "${SQLITE_ROOT}/bin/$<CONFIG>")
	set(SQLITE_BINARIES "${SQLITE_BINARIES}" PARENT_SCOPE)
else()
	set(SQLITE_FOUND OFF)
endif()

message(STATUS "SQLITE_FOUND=${SQLITE_FOUND}")
message(STATUS "SQLITE_ROOT=${SQLITE_ROOT}")
message(STATUS "SQLITE_INCLUDES=${SQLITE_INCLUDES}")
message(STATUS "SQLITE_LIBRARIES=${SQLITE_LIBRARIES}")
message(STATUS "SQLITE_BINARIES=${SQLITE_BINARIES}")
